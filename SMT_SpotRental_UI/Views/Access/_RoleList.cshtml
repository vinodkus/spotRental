@model SMT.SpotRental.UI.Models.DashboardViewModel

 
<table class="table table-bordered table-striped dataTable no-footer" id="tblRoles" role="grid" aria-describedby="tblRoles">
    @if (Model != null && Model.listRoles != null && Model.listRoles.Count > 0)
    {
        <thead class="header" style="background-color: #3c8dbc; color: white;">
            <tr role="row">
                <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1">
                    Role ID
                </th>
                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1">
                    Role Name
                </th>
                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" style="text-align:center">
                    Status
                </th>
                <th class="no-sort" tabindex="0" aria-controls="example1" rowspan="1" style="text-align:center" >
                    Edit
                </th>
            </tr>
        </thead>
        foreach (var roleItems in Model.listRoles)
        {
           
            <tr>
                <input type="hidden" id="hdnStatus_@roleItems.RoleID" value="@roleItems.Active" />
                <td id="tdRoleID_@roleItems.RoleID">@roleItems.RoleID</td>
                <td id="tdRoleName_@roleItems.RoleID">@roleItems.RoleName</td>
                @if (roleItems.Active != null && roleItems.Active.ToUpper() == "TRUE")
                {
                    <td style="text-align:center">
                       
                        <a href="#" class="btn btn-success" onclick="changeStatus(@roleItems.RoleID)" title="Click here to change status.">
                            <i class="glyphicon glyphicon-ok"></i>
                        </a>
                    </td>
                }
                else
                {
                    <td style="text-align:center"><a href="#" class="btn btn-danger" onclick="changeStatus(@roleItems.RoleID)" title="Click here to change status.">
                         <i class="glyphicon glyphicon-remove"></i></a> 
                   </td>
                }
                <td style="text-align:center"><a href="#" class="btn btn-danger" onclick="showPopupForUpdate(@roleItems.RoleID)"> <i class="glyphicon glyphicon-edit"></i> </a></td>

            </tr>
        }
    }

</table>