
@model SMT.SpotRental.UI.Response.MenuResponse


<table class="table table-bordered table-striped dataTable no-footer" id="tblMenus" role="grid" aria-describedby="tblMenus">
    @if (Model != null && Model.menuItems != null && Model.menuItems.Count > 0)
    {
        <thead class="header" style="background-color: #3c8dbc; color: white;">
            <tr role="row">
                <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1">
                    Action ID
                </th>
                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1">
                    Action Name
                </th>
                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1">
                    Action Text
                </th>
                <th class="no-sort" tabindex="0" aria-controls="example1" rowspan="1" style="text-align:center">
                    Controller Name
                </th>
                <th class="no-sort" tabindex="0" aria-controls="example1" rowspan="1" style="text-align:center">
                    Active
                </th>
                <th class="no-sort" tabindex="0" aria-controls="example1" rowspan="1" style="text-align:center">
                    Menu Item
                </th>
                <th class="no-sort" tabindex="0" aria-controls="example1" rowspan="1" style="text-align:center">
                    Menu Order
                </th>
                <th class="no-sort" tabindex="0" aria-controls="example1" rowspan="1" style="text-align:center">
                    Edit
                </th>
            </tr>
        </thead>
        foreach (var menu in Model.menuItems)
        {
            var menuactive = menu.Active == true ? 1 : 0;
            <tr>

                <td>@menu.ActionID  </td>
                <td>@menu.ActionName</td>
                <td>@menu.ActionText</td>
                <td>@(menu.ControllerName=="#"?"Parent": menu.ControllerName)</td>                
                @if (menu.Active == true)
                    {
                    <td style="text-align:center">
                        <a href="#" class="btn btn-success" title="Status">
                            <i class="glyphicon glyphicon-ok"></i>
                        </a>
                    </td>
                }
                else
                {
                    <td style="text-align:center"><a href="#" class="btn btn-danger" title="Status"> <i class="glyphicon glyphicon-remove"></i></a> </td>
                }
                <td style="text-align:center">@(menu.IsMenuItems == 1?"Yes":"No") </td>                
                <td>@menu.MenuOrder</td>
                <td style="text-align:center"><a href="#" class="btn btn-danger" onclick="showPopupForEditMenu('@menu.ActionID','@menu.ActionName','@menu.ActionText','@menu.ControllerName','@menuactive','@menu.IsMenuItems','@menu.MenuOrder','@menu.RootID')"> <i class="glyphicon glyphicon-edit"></i> </a></td>

            </tr>
        }
    }
    else
    {
        <tr role="row">
            <td colspan="6">No data found!!</td>
        </tr>
    }

</table>

